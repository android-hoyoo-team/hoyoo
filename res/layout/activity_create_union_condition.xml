<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_grey"
    android:orientation="vertical" >

    <com.ryg.expandable.ui.CustomActionbar
        android:id="@+id/create_union_condition_actionbar"
        android:layout_width="match_parent"
        android:layout_height="48dp" >
    </com.ryg.expandable.ui.CustomActionbar>

    <TextView
        android:id="@+id/union_condition_textview"
        android:layout_width="280dp"
        android:layout_height="32dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/di_05"
        android:gravity="center"
        android:text="您已经达到了所有创建公会所必须的条件"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/create_union_button"
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:background="@drawable/background_red_effect"
        android:gravity="center"
        android:text="现在创建"
        android:textColor="@color/white" />
</LinearLayout>