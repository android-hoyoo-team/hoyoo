<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_grey"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/red"
        android:gravity="center_vertical" >

        <ImageButton
            android:id="@+id/imageButton_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bt_02_nor" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="编辑信息"
            android:textColor="@color/white"
            android:textSize="17sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right" >

            <Button
                android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/red"
                android:text="完成"
                android:textColor="@color/white" />
        </LinearLayout>
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollview_01"
        android:layout_width="match_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@color/white" >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/head_portrait_01" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="35dp"
                    android:text="更换头像" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.12"
                    android:scaleType="centerInside"
                    android:src="@drawable/bt_17_nor_01" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:background="@color/white" >

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:text="姓名"
                    android:textColor="#ADADAD" />

                <EditText
                    android:id="@+id/text_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2.84"
                    android:background="@null"
                    android:ems="10"
                    android:gravity="center_vertical"
                    android:textColor="#ADADAD" >
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="1dp"
                android:background="@color/white" >

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:text="性别"
                    android:textColor="#ADADAD" />

                <EditText
                    android:id="@+id/text_sex"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2.84"
                    android:background="@null"
                    android:ems="10"
                    android:gravity="center_vertical"
                    android:textColor="#ADADAD" >
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="1dp"
                android:background="@color/white" >

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:text="所在院系"
                    android:textColor="#ADADAD" />

                <EditText
                    android:id="@+id/text_school"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2.84"
                    android:background="@null"
                    android:ems="10"
                    android:gravity="center_vertical"
                    android:textColor="#ADADAD" >
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="1dp"
                android:background="@color/white" >

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:text="生日"
                    android:textColor="#ADADAD" />

                <EditText
                    android:id="@+id/text_birthday"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2.84"
                    android:background="@null"
                    android:ems="10"
                    android:gravity="center_vertical"
                    android:textColor="#ADADAD" >
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="1dp"
                android:background="@color/white" >

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:text="联系方式"
                    android:textColor="#ADADAD" />

                <EditText
                    android:id="@+id/text_phonenum"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2.84"
                    android:background="@null"
                    android:ems="10"
                    android:gravity="center_vertical"
                    android:textColor="#ADADAD" >
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:background="@color/white" >

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:text="所在公会"
                    android:textColor="#ADADAD" />

                <EditText
                    android:id="@+id/text_union"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2.84"
                    android:background="@null"
                    android:ems="10"
                    android:gravity="center_vertical"
                    android:textColor="#ADADAD" >
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="1dp"
                android:background="@color/white" >

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:text="公会等级"
                    android:textColor="#ADADAD" />

                <EditText
                    android:id="@+id/text_unionlvl"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2.84"
                    android:background="@null"
                    android:ems="10"
                    android:gravity="center_vertical"
                    android:textColor="#ADADAD" >
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="1dp"
                android:background="@color/white" >

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:text="担任职位"
                    android:textColor="#ADADAD" />

                <EditText
                    android:id="@+id/text_unionrole"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2.84"
                    android:background="@null"
                    android:ems="10"
                    android:gravity="center_vertical"
                    android:textColor="#ADADAD" >
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="1dp"
                android:background="@color/white" >

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:text="成就等级"
                    android:textColor="#ADADAD" />

                <EditText
                    android:id="@+id/text_achievelvl"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2.84"
                    android:background="@null"
                    android:ems="10"
                    android:gravity="center_vertical"
                    android:textColor="#ADADAD" >
                </EditText>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>