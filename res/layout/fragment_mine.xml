<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_grey"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/white" >

                <ImageView
                    android:id="@+id/head_imageview"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="6dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/head_portrait_01" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="6dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="6dp"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/name_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/user_name"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/sex_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="♀"
                            android:textColor="@color/red"
                            android:textStyle="bold" >
                        </TextView>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/title_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="成就大师"
                        android:textSize="11sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="6dp"
                    android:layout_weight="1" >

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:text="公会:" />

                    <TextView
                        android:id="@+id/union_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/union_position_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:textColor="@drawable/red" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/skip_to_detail_imageview"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:scaleType="centerInside"
                    android:src="@drawable/bt_17_nor_01" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:id="@+id/focus"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/attention_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="210" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="关注"
                        android:textSize="10sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/fans"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="1dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:orientation="vertical" >

                    <!-- android:background="@color/white" -->

                    <TextView
                        android:id="@+id/fans_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="2300" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="粉丝"
                        android:textSize="10sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/achieve"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="1dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:orientation="vertical" >

                    <!-- android:background="@color/white" -->

                    <TextView
                        android:id="@+id/achievement_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="2730" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="成就"
                        android:textSize="10sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center_vertical" >

                <!-- android:background="@color/white" -->

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1.08"
                    android:gravity="center_vertical" >

                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="成就值"
                        android:textColor="@color/blue" />

                    <SeekBar
                        android:id="@+id/seekBar1"
                        android:layout_width="143dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.08"
                        android:focusable="true"
                        android:maxHeight="2dip"
                        android:minHeight="2dip"
                        android:paddingLeft="16.0dip"
                        android:paddingRight="16.0dip"
                        android:progressDrawable="@drawable/po_seekbar_01"
                        android:thumb="@drawable/seekbar_thumb_01" />

                    <TextView
                        android:id="@+id/achievement_progress_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2730/3000"
                        android:textColor="@color/blue" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_marginTop="1dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center_vertical" >

                <!-- android:background="@color/white" -->

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1.08"
                    android:gravity="center_vertical" >

                    <TextView
                        android:id="@+id/textView13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="疲劳值"
                        android:textColor="@color/red" />

                    <SeekBar
                        android:id="@+id/seekBar2"
                        android:layout_width="143dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.08"
                        android:focusable="true"
                        android:maxHeight="2.0dip"
                        android:minHeight="2.0dip"
                        android:paddingLeft="16.0dip"
                        android:paddingRight="16.0dip"
                        android:progressDrawable="@drawable/po_seekbar_02"
                        android:thumb="@drawable/seekbar_thumb_02" />

                    <TextView
                        android:id="@+id/vp_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="40/150"
                        android:textColor="@color/red" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/invitation_imagebutton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bt_22_nor_01"
                android:scaleType="fitXY" />

            <ImageButton
                android:id="@+id/response_imagebutton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:background="@drawable/bt_21_nor_01"
                android:scaleType="fitXY" />

            <ImageButton
                android:id="@+id/comment_imagebutton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:background="@drawable/bt_23_nor_01"
                android:scaleType="fitXY" />

            <ImageButton
                android:id="@+id/good_imagebutton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:background="@drawable/bt_24_nor_01"
                android:scaleType="fitXY" />

            <ImageButton
                android:id="@+id/letter_imagebutton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:background="@drawable/bt_25_nor_01"
                android:scaleType="fitXY" />

            <ImageButton
                android:id="@+id/friend_list_imagebutton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:background="@drawable/image1"
                android:scaleType="fitXY" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>