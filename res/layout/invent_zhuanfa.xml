<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ADADAD"
    android:fillViewport="true">
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
     <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/red"
            android:gravity="center_vertical" >

            <ImageButton
                android:id="@+id/invent_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bt_02_nor" />

            <TextView
                android:id="@+id/invent_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="转发邀请"
                android:textColor="@color/white"
                android:textSize="17sp" />
            <Button
                android:id="@+id/fabu_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/red"
                android:text="发布"
                android:layout_alignParentRight="true"
                android:textColor="@color/white"/>
        </RelativeLayout>
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            >
        <EditText 
            android:id="@+id/invent_content"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="说说为啥转发..."
            android:gravity="top"
            android:textSize="12sp"
            android:paddingLeft="10dp"
            android:background="@color/white"
            />
        
        <CheckBox 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="同时评论给 唐嫣"/>
        </LinearLayout>
        <LinearLayout 
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="@color/Grey"
            android:orientation="horizontal"
            android:padding="6dp">
            <ImageView 
                android:id="@+id/head_imageview"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:scaleType="fitXY"
                android:src="@drawable/head_portrait_02"/>
            <LinearLayout 
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="6dp">
                <TextView 
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="\@唐嫣"/>
                <TextView 
                    android:id="@+id/content"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textSize="10sp"
                    android:text="周六晚上小伙伴们一块来蜗牛咖啡厅打狼人！有妹子!饮料免费,快快来哟~"/>
            </LinearLayout>
        </LinearLayout>
</LinearLayout>
</ScrollView>