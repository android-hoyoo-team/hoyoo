<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/alpha_00" >

    <LinearLayout
        android:id="@+id/dialog_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_grey"
        android:orientation="vertical"
        android:paddingBottom="8dp"
        android:paddingTop="2dp" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="已获得成就" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" >

            <ImageView
                android:id="@+id/dialog_achievement_icon"
                android:layout_width="48dp"
                android:layout_height="48dp" />

            <ImageView
                android:id="@+id/dialog_frame"
                android:layout_width="240dp"
                android:layout_height="48dp"
                android:src="@drawable/di_10_silver" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/dialog_achievement_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="skaldjfa"
                    android:textSize="9sp" />

                <TextView
                    android:id="@+id/dialog_achievement_addition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="skaldjfa"
                    android:textSize="9sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/dialog_score_icon"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/dialog_frame"
                android:src="@drawable/di_13_04" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_group"
        android:layout_marginTop="-12dp"
        android:background="@color/transparent"
        android:gravity="center"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/dialog_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/dialog_close_button" />
    </LinearLayout>

</RelativeLayout>